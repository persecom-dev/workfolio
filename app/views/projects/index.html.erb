<% if @projects.any? %>
  <div class="h1 text-primary">Projects</div>
  <div class="container">
    <% @projects.each do |project| %>
      <%= link_to project.title, project, class: "h1 text-decoration-bone" %>
      <div>Published at:</div>
      <%= project.published_at %>
      <div>Content:</div>
      <%= project.content %>
      <div><%= link_to "View", project %></div>
    <% end %>
  </div>
<% end %>
<br>
<% if user_signed_in? %>
  <%= link_to 'New Project', new_project_path %>
<% end %>